
{
  "entities": {
    "Claim": {
      "title": "Claim",
      "type": "object",
      "description": "Represents a single claim for billing.",
      "properties": {
        "checkDate": { "type": "string", "format": "date" },
        "checkNumber": { "type": "string" },
        "npi": { "type": "string" },
        "payee": { "type": "string" },
        "payer": { "type": "string" },
        "rx": { "type": "string" },
        "serviceDate": { "type": "string", "format": "date" },
        "cardholderId": { "type": "string" },
        "patientName": { "type": "string" },
        "patientId": { "type": "string" },
        "serviceDescription": { "type": "string" },
        "productId": { "type": "string" },
        "amount": { "type": "number" },
        "paid": { "type": "number" },
        "adjustment": { "type": "number" },
        "patientPay": { "type": "number" },
        "paymentStatus": { "type": "string", "enum": ["PAID", "DENIED", "PENDING"] },
        "postingStatus": { "type": "string", "enum": ["Posted", "Unposted"] },
        "workflow": { "type": "string", "enum": ["New", "Pending", "Complete", "Sent to Collections"] },
        "notes": { "type": "string" },
        "statementSent": { "type": "boolean" },
        "statementSent2nd": { "type": "boolean" }
      },
      "required": [
        "checkDate",
        "serviceDate",
        "patientId",
        "patientName",
        "amount",
        "paid",
        "patientPay"
      ]
    },
    "Patient": {
      "title": "Patient",
      "type": "object",
      "description": "Represents a patient.",
      "properties": {
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "dateOfBirth": { "type": "string", "format": "date" },
        "address": {
          "type": "object",
          "properties": {
            "street": { "type": "string" },
            "city": { "type": "string" },
            "state": { "type": "string" },
            "zip": { "type": "string" }
          },
          "required": ["street", "city", "state", "zip"]
        }
      },
      "required": ["firstName", "lastName", "dateOfBirth", "address"]
    },
    "JennNote": {
      "title": "JennNote",
      "type": "object",
      "description": "Represents a note created by Jenn.",
      "properties": {
        "title": { "type": "string" },
        "body": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" },
        "tags": { "type": "array", "items": { "type": "string" } },
        "mood": { "type": "string", "enum": ["celebrate", "todo", "follow-up", "idea"] }
      },
      "required": ["title", "body", "createdAt", "updatedAt"]
    },
    "Pharmacy": {
      "title": "Pharmacy",
      "description": "Represents a pharmacy.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "npi": { "type": "string" },
        "contactName": { "type": "string" },
        "phone": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "status": { "type": "string", "enum": ["Active", "Paused", "Prospect"] },
        "address": {
          "type": "object",
          "properties": {
            "street": { "type": "string" },
            "city": { "type": "string" },
            "state": { "type": "string" },
            "zip": { "type": "string" }
          }
        }
      },
      "required": ["name"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/patients/{patientId}": {
      "schema": { "$ref": "#/entities/Patient" },
      "description": "Stores patient data."
    },
    "/claims/{claimId}": {
      "schema": { "$ref": "#/entities/Claim" },
      "description": "Stores all claims. Claims contain a patientId for linking."
    },
    "/notes/{noteId}": {
      "schema": { "$ref": "#/entities/JennNote" },
      "description": "Stores notes created by Jenn."
    },
    "/pharmacies/{pharmacyId}": {
      "schema": { "$ref": "#/entities/Pharmacy" },
      "description": "Stores pharmacy partner data."
    }
  }
}
